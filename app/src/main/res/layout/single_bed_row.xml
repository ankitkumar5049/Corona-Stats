<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:layout_margin="5dp"
    android:background="#fff"
    android:padding="5dp"
    android:layout_height="250dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtStateName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="State Name"
            android:background="#E63E6D"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="#f5f5f5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hospital"
            android:background="#7D1935"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="18sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="#f5f5f5" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="6"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:background="#7C83FD"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/txtTotalHos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="123456"
                    android:background="#7C83FD"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rural"
                    android:background="#96BAFF"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/txtRuralHos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="123456"
                    android:background="#96BAFF"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Urban"
                    android:background="#7DEDFF"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/txtUrbanHos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="123456"
                    android:background="#7DEDFF"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"/>
            </LinearLayout>



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="#f5f5f5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Beds"
            android:background="#7D1935"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="18sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="#f5f5f5" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="6"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:background="#7C83FD"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/txtTotalBed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="123456"
                    android:background="#7C83FD"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rural"
                    android:background="#96BAFF"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/txtRuralBed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="123456"
                    android:background="#96BAFF"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Urban"
                    android:background="#7DEDFF"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/txtUrbanBed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="123456"
                    android:background="#7DEDFF"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"/>
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="#f5f5f5" />



    </LinearLayout>

</androidx.cardview.widget.CardView>